---
const { topper, title, image, imageAlt, } = Astro.props;
---

<!-- ============================================ -->
<!--                   Contact                    -->
<!-- ============================================ -->

<section id="contact-1750">
    <div class="cs-container">
        <div class="cs-form-group">
            <div class="cs-content">
                <span class="cs-topper">{topper}</span>
                <h2 class="cs-title">{title}</h2>
            </div>
            <!--Form-->
            <form name="submit-to-google-sheet" action="https://script.google.com/macros/s/AKfycbxQQ8alpi_grC5Czz5mHEM0qtUdG_j6gwNxJipFRPUz9xM4gaMIBnMLF8Wr3kqW5-V5Mg/exec" method="post" autocomplete="off" class="form-container">
                <div class="form-group">
                  <div class="label-wrapper"><label class="form-label" for="name">Name (required)</label></div>
                  <input class="form-input" id="name" type="name" name="name" placeholder="First and Last" required/>
                </div>
                <div class="form-group">
                  <div class="label-wrapper"><label class="form-label" for="email">Email Address (required)</label></div>
                  <input class="form-input" id="email" type="name" name="email" placeholder="Email Address" required/>
                </div>
                <div class="form-group">
                  <div class="label-wrapper"><label class="form-label" for="phone">Phone (required)</label></div>
                  <input class="form-input" id="phone" type="tel" name="phone" placeholder="Phone Number" required/>
                </div>
                <button type="submit" id="submit_button" onclick="return validateForm()" class="submit-button" name="button" value="Submit form">Let's Go!</button>
              </form> 
    <script>
    const scriptURL =
      "https://script.google.com/macros/s/AKfycbxQQ8alpi_grC5Czz5mHEM0qtUdG_j6gwNxJipFRPUz9xM4gaMIBnMLF8Wr3kqW5-V5Mg/exec";
    const form = document.forms["submit-to-google-sheet"];
    const submitButton = document.getElementById("submit_button"); // Get the submit button
    const responseMessage = document.getElementById("response_message");
    
    form.addEventListener("submit", (e) => {
      e.preventDefault();
    
      // Change button text to "Submitting..." when the form is submitted
      submitButton.innerText = "Submitting...";
      submitButton.disabled = true; // Optional: Disable the button to prevent multiple submissions
    
      fetch(scriptURL, { method: "POST", body: new FormData(form) })
        .then((response) => {
          submitButton.innerText = "Success!"; // Revert button text upon success
          submitButton.disabled = false; // Re-enable the button
          form.reset();
        })
        .catch((error) => {
          responseMessage.innerHTML = "Error!";
          submitButton.innerText = "Please Try Again"; // Revert button text upon failure
          submitButton.disabled = false; // Re-enable the button
        });
    });
    </script>
        </div>
 
        
    </div>

    <div class="cs-picture-group">
        <picture>
            <img 
                src={image} 
                alt={imageAlt || "background"} 
                width="1920" 
                height="1080" 
                loading="lazy" 
                decoding="async"
                class="cs-background-image"
            >
        </picture>
    </div>

</section>
                                
