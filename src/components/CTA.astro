            box-sizing: border-box;
            padding: 0 (24/16rem);
            background-color: var(--primary);
            overflow: hidden;
            color: #1a1a1a;
            border: none;
            display: inline-block;
            position: relative;
            z-index: 1;
            transition: color 0.3s;

            &:before {
                content: "";
                width: 0%;
                height: 100%;
                background: #000;
                opacity: 1;
                position: absolute;
                top: 0;
                left: 0;
                z-index: -1;
                transition: width 0.3s;
            }

            &:hover {
                color: #fff;
                &:before {
                    width: 100%;
                }
            }
        }

        .cs-submit {
            margin: (16/16rem) 0 0;
            color: var(--bodyTextColorWhite);
            grid-column: span 12;
            justify-self: flex-start;

            &:hover {
                cursor: pointer;
            }
        }

        .cs-info-group {
            display: flex;
            flex-direction: column;
            gap: (24/16rem);
        }

        .cs-detail {
            font-size: (20/16rem);
            font-weight: 700;
            line-height: 1.2em;
            color: var(--bodyTextColor);
            display: block;
        }

        .cs-picture-group {
            width: 100%;
            height: 100%;
            max-height: none;
            margin-top: 0;
            overflow: hidden;
            position: absolute;
            top: 0;
            left: 0;
            transform: none;
            z-index: -1;
        }

        .cs-iframe {
            width: 100%;
            height: 100%;
            display: block;
        }

        .cs-graphic {
            width: 100%;
            min-width: (1280/16rem);
            height: auto;
            object-fit: cover;
            position: absolute;
            left: 50%;
            z-index: 0;
            transform: translateX(-50%);
        }

        .cs-top {
            top: 0;
        }

        .cs-left {
            left: 4%;
            transform: rotate(270deg);
            transform-origin: left;
        }

        .cs-bottom {
            bottom: 0;
            left: 0;
            transform: rotateX(180deg);
        }

        .cs-dark {
            display: none;
        }

        .form-container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
        }

        .form-group {
            margin-bottom: 1.5rem;
            width: 100%;
        }

        .form-input {
            width: 100%;
            padding: 12px 16px;
            font-size: 1.1rem;
            line-height: 1.5;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-top: 0.5rem;
            height: 50px;
        }

        .submit-button {
            width: 100%;
            padding: 12px 24px;
            font-size: 1.1rem;
            margin-top: 1rem;
        }

        .form-label {
            color: #fff;
            font-weight: bold;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.5);
        }

        .form-input {
            background-color: rgba(255, 255, 255, 0.9);
        }

        &::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: -1;
        }

        .cs-picture-group {
            z-index: -2;
        }
    }
}

/* Tablet - 768px */
@media only screen and (min-width: 48rem) {
    #contact-1750 {
        .cs-container {
            flex-direction: row;
            align-items: center;
        }

        .cs-form-group {
            flex: 1;
        }

        .cs-info-group {
            flex: 1;
        }
    }
}

/* Desktop - 1024px */
@media only screen and (min-width: 64rem) {
    #contact-1750 {
        .cs-container {
            width: 50%;
            margin: 0 auto 0 0;
            padding: (40/16rem) (24/16rem);
        }

        .cs-picture-group {
            width: 100%;
            margin: 0;
            left: 0;
        }
    }
}

/* Large Desktop - 1300px */
@media only screen and (min-width: 81.25rem) {
    #contact-1750 {
        .cs-label {
            &:nth-of-type(2),
            &:nth-of-type(3) {
                grid-column: span 6;
            }
        }
    }
}

/* Largest Desktop - 1920px */
@media only screen and (min-width: 120rem) {
    #contact-1750 {
        padding-top: 7vw;
        padding-bottom: 9vw;

        .cs-container {
            margin: 0 auto;
            transform: none;
        }
    }
}
                                
